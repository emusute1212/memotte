<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="io.github.emusute1212.memotte">

    <application
        android:name="io.github.emusute1212.memotte.MemotteApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true">
        <activity
            android:name="io.github.emusute1212.memotte.MainActivity"
            android:theme="@style/Theme.Android"
            android:windowSoftInputMode="stateHidden|adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="io.github.emusute1212.memotte.view.settings.AboutAppActivity"
            android:label="@string/about_app_title"
            android:theme="@style/Theme.Setting">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="io.github.emusute1212.memotte.MainActivity" />
        </activity>
        <activity
            android:name="com.google.android.gms.oss.licenses.OssLicensesMenuActivity"
            android:theme="@style/Theme.Setting">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="io.github.emusute1212.memotte.MainActivity" />
        </activity>
        <activity
            android:name="com.google.android.gms.oss.licenses.OssLicensesActivity"
            android:theme="@style/Theme.Setting" />
    </application>

</manifest>